                <input 
                  type="number" 
                  class="form-control" 
                  placeholder="Enter practical marks" 
                  name="practical" 
                  value="<%=editing?newsubjectData.practical:''%>" 
                  required 
                  id="practical"
                  min="0"
                >
              </div>
