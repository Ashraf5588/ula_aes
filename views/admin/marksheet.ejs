<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Marksheet</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background-color: #f5f5f7;
      margin: 0;
      padding: 20px;
    }

    .select-container {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border-radius: 15px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .select-header {
      color: #1d1d1f;
      font-size: 24px;
      font-weight: 500;
      margin-bottom: 20px;
      text-align: center;
    }

    .select-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .select-group {
      position: relative;
    }

    .select-group label {
      display: block;
      font-size: 14px;
      color: #86868b;
      margin-bottom: 8px;
      font-weight: 500;
    }

    select {
      width: 100%;
      padding: 12px 16px;
      font-size: 16px;
      color: #1d1d1f;
      background-color: rgba(255, 255, 255, 0.9);
      border: 1px solid #d2d2d7;
      border-radius: 12px;
      appearance: none;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    select:hover {
      border-color: #0066cc;
      background-color: rgba(255, 255, 255, 1);
    }

    select:focus {
      outline: none;
      border-color: #0066cc;
      box-shadow: 0 0 0 4px rgba(0, 102, 204, 0.1);
    }

    .select-group::after {
      content: 'âŒ„';
      position: absolute;
      right: 16px;
      top: 38px;
      color: #86868b;
      pointer-events: none;
      font-size: 18px;
    }
  </style>
</head>
<body>
  <div class="select-container">
    <h2 class="select-header">Select Class and Section</h2>
    <div class="select-grid">
      <div class="select-group">
        <label for="class">Class</label>
        <select name="class" id="class">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
        </select>
      </div>

      <div class="select-group">
        <label for="section">Section</label>
        <select name="section" id="section">
          <option value="Moon">Moon</option>
          <option value="Sun">Sun</option>
          <option value="x">X</option>
        </select>
      </div>
      <div class="select-group">
        <label for="terminal">Terminal</label>
        <select name="terminal" id="terminal">
          <option value="FIRST">First Term</option>
          <option value="SECOND">Second Term</option>
          <option value="THIRD">Third Term</option>
        </select>
      </div>
    </div>

    <button onclick="generate()" class="generate-btn" style="
      display: block;
      width: 100%;
      padding: 14px;
      background: #0066cc;
      color: white;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 20px;
    ">Generate Marksheet</button>
  </div>

  <script>
    function generate() {
      const classValue = document.getElementById('class').value;
      const sectionValue = document.getElementById('section').value;
     const terminalValue = document.getElementById('terminal').value;
      const redirectUrl = `/marksheet?studentClass=${classValue}&section=${sectionValue}&terminal=${terminalValue}`;
      window.location.href = redirectUrl;
    }
  </script>
<table border="1" cellpadding="10" cellspacing="0">
  <thead>
    <tr>
      <th>Roll No</th>
      <th>Name</th>
      <% subjectname.forEach(sub => { %>
        <th><%= sub %>(TH)</th>
        <th><%= sub %>(PR)</th>
        <th>Total</th>
        <th>Grade</th>
      <% }) %>
    </tr>
  </thead>
  <tbody>

  <% Object.keys(students).forEach(studentName => { %>
    <tr>
      <td><%= students[studentName].roll %></td>
      <td><%= studentName %></td>
      <% subjectname.forEach(sub => {
           const subjData = students[studentName][sub] || {};
      %>
        <td><%= subjData.theory || '' %></td>
        <td><%= subjData.practical || '' %></td>
        <td><%= subjData.total || '' %></td>
        <td><%= subjData.grade || '' %></td>
      <% }) %>
    </tr>
  <% }) %>
</tbody>


</table>

</body>
</html>
